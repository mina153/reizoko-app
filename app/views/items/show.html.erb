<div class="item-show">
  <div class="item-box">

    <div class= "Account__info">
    
       <h1>DETAIL</h1>

      <div class="Account_link">
        <%=link_to '⇨ back to MyPage', items_path(current_user), class:"share4" %>
      </div>

    </div>



    <div class="item">
      <div class = item-title><h2><%= @item.thing %></h2></div>
    </div>
  

    <table class="detail-table">
      <tbody>
        <tr>
          <th class="detail-item">Expiry Date</th>
          <td class="detail-value"><%= @item.expiry %></td>
        </tr>
        <tr>
          <th class="detail-item">Category</th>
          <td class="detail-value"><%= @item.category.name %></td>
        </tr>
        <tr>
          <th class="detail-item">Explantion</th>
          <td class="detail-value"><%= @item.explanation %></td>
        </tr>
      </tbody>
    </table>
   
        
    <div class= edit-destroy>
      <% if user_signed_in? %>  
        <% if current_user== @item.user %>
          <div class = "edit1-destroy1">
            <%= link_to "📝", edit_item_path(@item.id), method: :get, class: "item-edit" %>  or <%= link_to "❌", item_path(@item.id), method: :delete, class:"item-destroy" %>
          </div>
        <% end %> 
      <% end %>       
    </div>

  

  </div>
</div>