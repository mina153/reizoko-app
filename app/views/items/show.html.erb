<%= render "shared/header" %>

<div class="items-contents">
  <div class="item-box">

    <div class= "Account__info">
    
       <h1 style='color:sandybrown;'>DETAIL</h1>


    </div>



    <div class="item">
      <div class = item-title><h2><%= @item.thing %></h2></div>
    </div>
  

    <table class="detail-table">
      <tbody>
        <tr>
          <th class="detail-item">Expiry Date</th>
          <td class="detail-value"><%= @item.expiry %>
            <% if @item.expiry < Date.today then%>
              <p style="color:red; margin:0;"> ＊＊＊ Expired ＊＊＊</p>
            <% elsif @item.expiry == Date.today then%>
              <p style="color:goldenrod; margin:0;"> ＊ until Today ＊</p>
            <% end%>
          </td>
        </tr>
        <tr>
          <th class="detail-item">Category</th>
          <td class="detail-value"><%= @item.category.name %></td>
        </tr>
        <tr>
          <th class="detail-item">Explantion</th>
          <td class="detail-value"><%= @item.explanation %></td>
        </tr>
      </tbody>
    </table>
   
        
    <div class= edit-destroy>
      <% if user_signed_in? %>  
        <% if current_user== @item.user %>
          <div class = "edit1-destroy1">
            <%= link_to "📝", edit_item_path(@item.id), method: :get, class: "item-edit" %>  or <%= link_to "❌", item_path(@item.id), method: :delete, class:"item-destroy" %>
          </div>
        <% end %> 
      <% end %>       
    </div>

  
      <div class="Account_link">
        <%=link_to '⇨ back to ExistList', items_path(current_user), class:"share4" %>
      </div>

  </div>
</div>