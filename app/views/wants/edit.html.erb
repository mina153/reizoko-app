    </div>




    <%= form_with model: @want , local: true do |f| %>
    
    <%# „Ç®„É©„ÉºË°®Á§∫ %>
      <%= render 'layouts/error_messages', model: f.object %> 
    <%# /„Ç®„É©„ÉºË°®Á§∫ %>
     
       <div class="new-items">
          <h3>< Tell about food you wanna buy ></h3>
        <div class = "post">

          <div class="items">
            <div class="weight-bold-text">
              <strong>* Food</strong>
            </div>
            <%= f.text_area :wanted, class:"items-thing", id:"item-thing", placeholder:"Plase fill out" %>
