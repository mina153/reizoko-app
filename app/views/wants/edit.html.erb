                      <option value=<%= supermarket.id %>><%= supermarket.market %></option>
                    <% end%> 
                  <% end %>
              </select> 
    
            </div>

          </div>
        </div>
       
      </div>

      <%# ‰∏ãÈÉ®„Éú„Çø„É≥ %>
